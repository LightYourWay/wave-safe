{
  "name": "wave-safe",
  "version": "0.0.1",
  "description": "An windows taskbar app that automatically creates persistent rolling backups of a Waves LV1 instance on the network.",
  "main": "src/main.js",
  "bin": "src/main.js",
  "scripts": {
    "build": "esbuild --platform=node --bundle src/main.ts --outfile=build/main.js && node scripts/copy-native-addons.mjs",
    "start": "ts-node-dev src/main.ts",
    "test": "node debug src/main.js",
    "pkg": "pkg --debug --out-path dist --targets node16-win-x64 build/main.js --config pkg-config.json && node scripts/set-exe-icon.mjs",
    "lint": "npx prettier . --check",
    "format": "npx prettier . --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LightYourWay/wave-safe.git"
  },
  "author": "Lukas Runge",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LightYourWay/wave-safe/issues"
  },
  "homepage": "https://github.com/LightYourWay/wave-safe#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.7",
    "pkg": "^5.8.1",
    "prettier": "3.1.0",
    "rcedit": "^4.0.1",
    "trayicon": "^1.2.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3"
  },
  "packageManager": "yarn@4.0.2",
  "resolutions": {
    "windows-trayicon/node-gyp": "10.0.1"
  }
}
